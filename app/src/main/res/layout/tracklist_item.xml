<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:gravity="start|center_vertical"
    android:paddingLeft="3dp"
    android:paddingRight="3dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/colorAccent"
    android:id="@+id/tracklist_item_mainlayout"
    >

    <TextView android:id="@+id/tracklist_item_id"
        android:text="{id}"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        style="@android:style/TextAppearance.Large"
        android:gravity="start|center_vertical"
        android:layout_marginRight="5dp"/>

    <RelativeLayout
        android:layout_height="fill_parent"
        android:gravity="start|center_vertical"
        android:layout_width="0dip"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/tracklist_item_weekday"
            android:text="{weekday}"
            style="@android:style/TextAppearance.Medium"/>

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tracklist_item_nameordate"
            android:text="{start_date}"
            android:layout_toRightOf="@id/tracklist_item_weekday"
            android:layout_width="wrap_content"
            style="@android:style/TextAppearance.Medium"/>


        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tracklist_item_recopem_id"
            android:layout_below="@id/tracklist_item_nameordate"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:textStyle="bold"
            style="@android:style/TextAppearance.Small"
            android:text="{RecopID}"
            android:layout_width="wrap_content"/>

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tracklist_item_gpsmethod"
            android:layout_below="@id/tracklist_item_nameordate"
            android:layout_toRightOf="@id/tracklist_item_recopem_id"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:layout_marginRight="3dp"
            style="@android:style/TextAppearance.Small"
            android:text="@string/track_item_track_method"
            android:layout_width="wrap_content"/>
        <TextView
            android:layout_height="wrap_content"
            android:text="{GPS/MANUEL}"
            android:id="@+id/tracklist_item_gpsmethod_which"
            android:layout_below="@id/tracklist_item_nameordate"
            android:layout_toRightOf="@id/tracklist_item_gpsmethod"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"/>


        <TextView
            android:id="@+id/tracklist_item_data"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:text="@string/track_item_data_added"
            android:textStyle="bold"
            android:layout_below="@id/tracklist_item_recopem_id"
            style="@android:style/TextAppearance.Small"
            />
        <TextView
            android:id="@+id/tracklist_item_data_value"
            android:layout_height="wrap_content"
            android:text="{false}"
            android:layout_below="@id/tracklist_item_gpsmethod"
            android:layout_toRightOf="@id/tracklist_item_data"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/tracklist_item_pictures"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:text="@string/track_item_pic_added"
            android:textStyle="bold"
            android:layout_below="@id/tracklist_item_gpsmethod"
            android:layout_toRightOf="@id/tracklist_item_data_value"
            style="@android:style/TextAppearance.Small"
            />
        <TextView
            android:layout_height="wrap_content"
            android:text="{none/true}"
            android:id="@+id/tracklist_item_pictures_value"
            android:layout_below="@id/tracklist_item_gpsmethod"
            android:layout_toRightOf="@id/tracklist_item_pictures"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/tracklist_item_exported"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:text="@string/track_item_exported"
            android:textStyle="bold"
            android:layout_below="@id/tracklist_item_data"
            style="@android:style/TextAppearance.Small"
            />
        <TextView
            android:id="@+id/tracklist_item_exported_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="{false}"
            android:layout_below="@id/tracklist_item_data"
            android:layout_toRightOf="@id/tracklist_item_exported"
            style="@android:style/TextAppearance.Small"
            />
        <TextView
            android:id="@+id/tracklist_item_sent_email"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="3dp"
            android:text="@string/track_item_emailed"
            android:textStyle="bold"
            android:layout_below="@id/tracklist_item_data"
            android:layout_toRightOf="@id/tracklist_item_exported_value"
            style="@android:style/TextAppearance.Small"
            />
        <TextView
            android:layout_height="wrap_content"
            android:text="{none/true}"
            android:id="@+id/tracklist_item_sent_email_value"
            android:layout_below="@id/tracklist_item_data"
            android:layout_toRightOf="@id/tracklist_item_sent_email"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"/>

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tracklist_item_trackpoints"
            android:layout_below="@id/tracklist_item_exported"
            android:layout_marginLeft="8dp"
            android:textStyle="bold"
            android:layout_marginRight="3dp"
            style="@android:style/TextAppearance.Small"
            android:text="@string/track_item_trackpoints_count"
            android:layout_width="wrap_content"/>
        <TextView
            android:layout_height="wrap_content"
            android:text="{y}"
            android:id="@+id/tracklist_item_tps"
            android:layout_below="@id/tracklist_item_exported"
            android:layout_toRightOf="@id/tracklist_item_trackpoints"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"/>
    </RelativeLayout>

</LinearLayout>