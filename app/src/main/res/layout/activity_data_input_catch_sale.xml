<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".controller.dataInput.dataInputCatchSale">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/activity_data_input_catch_sale_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="@string/data_input_catch_sale_question"
            android:textStyle="bold"
            style="@android:style/TextAppearance.Large"
            />

        <RelativeLayout
            android:id="@+id/activity_catch_sale_quantity_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/activity_data_input_catch_sale_question_N"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/data_input_catch_sale_question_N"
                android:textStyle="bold"
                style="@android:style/TextAppearance.Medium"
                />

            <NumberPicker
                android:id="@+id/activity_data_input_catch_sale_input_N"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_data_input_catch_sale_question_N"
                />

            <NumberPicker
                android:id="@+id/activity_data_input_catch_sale_input_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_data_input_catch_sale_question_N"
                android:layout_toRightOf="@id/activity_data_input_catch_sale_input_N"
                android:layout_marginLeft="40dp"
                />

            <TextView
                android:id="@+id/activity_data_input_catch_sale_question_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_data_input_catch_sale_question_N"
                android:layout_toRightOf="@id/activity_data_input_catch_sale_input_type"
                android:layout_marginLeft="40dp"
                android:text="@string/data_input_catch_sale_question_price"
                style="@android:style/TextAppearance.Medium"/>

            <Spinner
                android:id="@+id/activity_data_input_catch_sale_input_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_data_input_catch_sale_question_price"
                android:layout_toRightOf="@id/activity_data_input_catch_sale_input_type"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                />

            <EditText
                android:id="@+id/activity_data_input_catch_sale_input_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/data_input_catch_sale_question_details"
                android:imeOptions="flagNoExtractUi"
                android:layout_below="@id/activity_data_input_catch_sale_input_N"/>
        </RelativeLayout>

        <Button
            android:id="@+id/activity_data_input_catch_sale_launch_fish_caught"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:text="@string/data_input_catch_sale_launch_fish_caught"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>